@model CarViewModel
@{
    ViewBag.Title = "Delete Car";
}

<h3 class="text-muted" style="text-align:center">@ViewBag.Title</h3>
<hr />

<form asp-action="Delete" >
    <div class="card mb-3" style="max-width: 100%;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Make">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Make - @Model.Model</h5>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>
