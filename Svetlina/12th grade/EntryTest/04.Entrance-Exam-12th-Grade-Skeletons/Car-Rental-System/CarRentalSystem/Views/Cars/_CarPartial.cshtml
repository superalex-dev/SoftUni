@model CarServiceModel
@inject IDealerService dealers
@inject ICarService cars

<div class="card col-4" style="width: 20rem;">
    <img src="@Model.ImageUrl" class="card-img-top rounded img-thumbnail" alt="@Model.Make">
    <div class="card-body">
        <h5 class="card-title">@Model.Make</h5>
        <p class="card-text">@Model.Model</p>
        <p class="card-text">@String.Format("{0:f2}", Model.PricePerDay) BGN</p>
        <p class="card-text"><small class="text-muted">(@(Model.IsRented ? "Rented" : "Not Rented"))</small></p>
        <a asp-controller="Cars" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success">Details</a>
        @if (this.User.Identity.IsAuthenticated)
        {
            @if (this.cars.HasDealerWithThisId(Model.Id, this.User.Id()))
            {
                <a asp-controller="Cars" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-controller="Cars" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            }
            <p></p>
            @if (!Model.IsRented && !this.dealers.ExistsById(this.User.Id()))
            {
                <form class="input-group-sm" asp-controller="Cars" asp-action="Rent" asp-route-id="@Model.Id" method="post">
                    <input class="btn btn-primary" type="submit" value="Rent" />
                </form>
            }
            else if(this.cars.IsRentedByUserWithId(Model.Id, this.User.Id()))
            {
                <form asp-controller="Cars" asp-action="Leave" asp-route-id="@Model.Id" method="post">
                    <input class="btn btn-primary" type="submit" value="Leave" />
                </form>
            }
        }
    </div>
</div>