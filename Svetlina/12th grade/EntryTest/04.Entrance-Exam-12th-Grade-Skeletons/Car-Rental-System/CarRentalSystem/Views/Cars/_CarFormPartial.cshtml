@model CarFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Make">Make</label>
        <input asp-for="Make" class="form-control" id="make" placeholder="Nissan">
        <span asp-validation-for="Make" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model">Model</label>
        <input asp-for="Model" class="form-control" id="model" placeholder="Altima">
        <span asp-validation-for="Model" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" for="description">Description</label>
        <textarea asp-for="Description" class="form-control" id="description" rows="3"></textarea>
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" >Image Url</label>
        <input asp-for="ImageUrl" class="form-control" id="image" placeholder="Your image Url here">
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerDay" for="price">Price Per Day</label>
        <input asp-for="PricePerDay" class="form-control" id="price" placeholder="39.99">
        <span asp-validation-for="PricePerDay" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" for="category">Category</label>
        <select asp-for="CategoryId" class="form-control" id="category">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="small text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>