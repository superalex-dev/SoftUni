@model BecomeDealerFormModel

@{
    ViewBag.Title = "Become Dealer";
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h3 class="text-muted" style="text-align:center">@ViewBag.Title</h3>
<hr />
@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData.ModelState["Error"].Errors.First().ErrorMessage
    </div>
}
<form method="post">
    <div class="form-group">
            <label for="phone">Phone Number</label>
            <input class="form-control" asp-for="PhoneNumber" id="phone" placeholder="+359808080808">
            <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
